<% if current_user %>
	<form method='post' action='/peep' class='peep-form'>
		<input type='text' name='peep' size='100' value='Post a peep!'>
		<input type='submit' value='Post your peep!'>
	</form>
<% end %>
 <main id='list-peeps'>
 	<ul>
 		<% @peeps.each do |peep| %>
 			<article class='each-peep'>
	 			<li>
	 				<h1></h1>
	 					<%= peep.user.username %>:
	 					<%= peep.text %>
	 					<em><%= peep.time %></em>
	 			</li>
	 		</article>
	 	<% end %>
	 </ul>
</main>
